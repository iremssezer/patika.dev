import java.util.Scanner;


public class Main {
    public static void main(String[] args) {

        Scanner input = new Scanner(System.in);
        int  toplam = 0, sayi;
        do {
            System.out.println("Sayı giriniz:");
            sayi = input.nextInt();

            if (sayi % 2 == 0 && sayi % 4 == 0) {
                System.out.println("Sayı 2'nin ve 4'ün katı");
                toplam += sayi;
            }

        }while (sayi%2==0);
        System.out.println("Sayı 2'nin ve 4'ün katı ve toplamı:"+toplam);

    }
}
