import java.util.Scanner;

public class Main {
    public static void main(String[] args) {

        Scanner input = new Scanner(System.in);
        
        int sayi,kalan;
        
        System.out.println("Sayı giriniz:");
        sayi=input.nextInt();
        kalan=sayi/2;
        if (kalan==0){
            System.out.println("Sayı çifttir.");


        }
        else {
            System.out.println("Sayı tektir.");

        }

    }
}
