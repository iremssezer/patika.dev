public class Main {

    static void polindromMu(int pol) {

        int ilk=pol;



        int tsayi = 0;
        for(;pol != 0; pol /= 10) {
            int basamak = pol % 10;
            tsayi = tsayi * 10 + basamak;
            System.out.println("bas"+basamak);

        }
            if(ilk==tsayi)
                System.out.println(ilk+" Bir palindrom sayıdır ");
            else
                System.out.println("Palindrom sayı değildir ");
      

    }


    public static void main (String[]args){
        polindromMu(555);
    }
}
